  <script>
    // Helper to render an Adsterra zone into a container div
    function renderAdsterra(containerId, width, height) {
      var container = document.getElementById(containerId);
      if (!container) return;

      // Define zone options
      window.atOptions = {
        key: '71ece280e81f6067a42502b53a9dbc85',
        format: 'iframe',
        height: height,
        width: width,
        params: {}
      };

      // IMPORTANT: replace this with the exact invoke.js URL from your Adsterra snippet
      var scriptUrl = '<script type="text/javascript">
  atOptions = {
  	'key' : '71ece280e81f6067a42502b53a9dbc85',
  	'format' : 'iframe',
  	'height' : 90,
  	'width' : 728,
  	'params' : {}
  };
</script>
<script
  type="text/javascript"
  src="//www.highperformanceformat.com/71ece280e81f6067a42502b53a9dbc85/invoke.js"
></script>';

      var s = document.createElement('script');
      s.type = 'text/javascript';
      s.src = scriptUrl;
      container.appendChild(s);
    }

    window.addEventListener('load', function () {
      // Hero ad
      renderAdsterra('ad1-desktop', 728, 90);
      renderAdsterra('ad1-mobile', 320, 50);

      // Mid-page ad
      renderAdsterra('ad2-desktop', 728, 90);
      renderAdsterra('ad2-mobile', 320, 50);

      // Footer ad
      renderAdsterra('ad3-desktop', 728, 90);
      renderAdsterra('ad3-mobile', 320, 50);

      // Floating bottom mobile ad
      renderAdsterra('ad-floating', 320, 50);
    });
  </script>
